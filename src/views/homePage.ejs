<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <div class="topnav">
      <a class="active" href="/v1/">Home</a>
      <a href="/v1/create">Create User</a>
      <a href="/v1/abc">Contact</a>
      <a href="#about">About</a>
    </div>

    <div class="table-container">
      <div class="title">List Users:</div>
      <table>
        <tr>
          <th>Id</th>
          <th>Email</th>
          <th>Name</th>
          <th>City</th>
          <th>Action</th>
        </tr>
        <% if (listUsers && listUsers.length > 0) { %> <%
        listUsers.forEach((user) => { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.email %></td>
          <td><%= user.name %></td>
          <td><%= user.city %></td>
          <td>
            <a href="/v1/update/<%= user.id %>" type="button">Eidt</a>
            <form action="/v1/delete-users/<%= user.id %>" method="POST">
              <button>Delete</button>
            </form>
          </td>
        </tr>
        <% }); %> <% } else { %>
        <tr>
          <td colspan="5">No users found</td>
        </tr>
        <% } %>
      </table>
    </div>
  </body>
</html>
